# ========================================
# Application Configuration
# ========================================
NODE_ENV=production
PORT=3000
API_URL=https://api.yourdomain.com
API_PREFIX=api

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=real_estate_prod
DATABASE_SSL=true
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=false

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your_jwt_secret_key_min_32_chars_change_in_production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_min_32_chars
JWT_REFRESH_EXPIRATION=30d

# ========================================
# AWS Configuration
# ========================================
AWS_REGION=me-central-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=real-estate-uploads-prod
AWS_S3_REGION=me-central-1

# ========================================
# OpenSearch Configuration
# ========================================
OPENSEARCH_NODE=https://your-opensearch-endpoint.me-central-1.es.amazonaws.com
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your_opensearch_password
OPENSEARCH_SSL_REJECT_UNAUTHORIZED=true

# ========================================
# AI Services (Anthropic Claude)
# ========================================
ANTHROPIC_API_KEY=your_anthropic_api_key_sk_ant_xxxxx
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096

# ========================================
# OCR Services (Tesseract)
# ========================================
TESSERACT_LANG=eng+ara
TESSERACT_PATH=/usr/bin/tesseract

# ========================================
# WhatsApp Business API
# ========================================
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# ========================================
# SMS Configuration
# ========================================
SMS_PROVIDER=twilio
SMS_API_URL=https://api.twilio.com/2010-04-01
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+971501234567

# ========================================
# Email Configuration
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_NAME=Dubai Real Estate Platform
SMTP_FROM_EMAIL=noreply@yourdomain.com

# ========================================
# Payment Gateways
# ========================================

# Telr
TELR_STORE_ID=your_telr_store_id
TELR_AUTH_KEY=your_telr_auth_key
TELR_API_URL=https://secure.telr.com/gateway
TELR_CURRENCY=AED

# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayTabs
PAYTABS_PROFILE_ID=your_paytabs_profile_id
PAYTABS_SERVER_KEY=your_paytabs_server_key
PAYTABS_API_URL=https://secure.paytabs.com

# Network International
NETWORK_OUTLET_REF=your_network_outlet_ref
NETWORK_API_KEY=your_network_api_key
NETWORK_API_URL=https://api-gateway.ngenius-payments.com

# ========================================
# Redis Configuration (Optional)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ========================================
# Rate Limiting
# ========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ========================================
# File Upload Configuration
# ========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
UPLOAD_DESTINATION=./uploads

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# ========================================
# Monitoring and Logging
# ========================================

# Sentry
SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# DataDog
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
DATADOG_SITE=datadoghq.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=./logs

# ========================================
# Feature Flags
# ========================================
ENABLE_SWAGGER=true
ENABLE_ANALYTICS=true
ENABLE_AI_FEATURES=true
ENABLE_MESSAGING=true
ENABLE_PAYMENTS=true

# ========================================
# Compliance (PDPL)
# ========================================
DATA_RETENTION_DAYS=2555
CONSENT_VERSION=1.0.0
ENABLE_AUDIT_LOGGING=true

# ========================================
# Geocoding and Maps
# ========================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GEOCODING_PROVIDER=google

# ========================================
# Cron Jobs and Background Tasks
# ========================================
ENABLE_SCHEDULED_TASKS=true
TASK_SCHEDULER_TIMEZONE=Asia/Dubai

# ========================================
# Security
# ========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_min_32_chars
COOKIE_SECRET=your_cookie_secret_min_32_chars
HELMET_ENABLED=true
CSRF_ENABLED=true

# ========================================
# Third-party Integrations
# ========================================

# DLD (Dubai Land Department) API
DLD_API_URL=https://api.dubailand.gov.ae
DLD_API_KEY=your_dld_api_key
DLD_API_SECRET=your_dld_api_secret

# RERA API
RERA_API_URL=https://api.rera.ae
RERA_API_KEY=your_rera_api_key

# Property Portals
BAYUT_API_KEY=your_bayut_api_key
PROPERTY_FINDER_API_KEY=your_property_finder_api_key
DUBIZZLE_API_KEY=your_dubizzle_api_key

# ========================================
# Development/Testing Only
# ========================================
# SWAGGER_USER=admin
# SWAGGER_PASSWORD=admin123
# ENABLE_DEBUG=false
# MOCK_EXTERNAL_APIS=false
